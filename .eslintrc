{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/vue3-essential",
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "parser": "@typescript-eslint/parser"
  },
  "plugins": [ "@typescript-eslint", "vue", "prettier" ],
  "rules": {
    "vue/max-attributes-per-line": [ "error", {
      "singleline": {
        "max": 1
      },
      "multiline": {
        "max": 1
      }
    } ],
    "vue/first-attribute-linebreak": ["error", {
      "singleline": "ignore",
      "multiline": "below"
    }]
  }
}
